<h1>New Game</h1>

<div id="letter-container" class="row">
  <% @letters.each do |letter| %>
    <div class="letter">
      <%= letter %>
    </div>
  <% end %>
</div>

<form class="mt-5" method="post" action="/score">
  <label for="word">Please enter the longest word you can find</label> <br>
  <div class="form-group form-inline">
    <input class="form-control no-border" type="text" name="word" id="word" required>
    <input class="btn btn-primary no-border" type="submit" value="Submit">
  </div>
  
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
</form>

